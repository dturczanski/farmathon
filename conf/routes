# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index


# Enquiries
GET     /enquiries                  controllers.Enquiries.index
GET     /enquiries/:id              controllers.Enquiries.details(id: String)
POST    /enquiries/accept/:id       controllers.Enquiries.details(id: String)
POST    /enquiries/decline/:id      controllers.Enquiries.details(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
